<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<StackPane fx:id="contentViewForChange" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.SettingController">

    <GridPane alignment="center" hgap="10" vgap="10" >


        <padding><Insets bottom="40" left="40" right="40" top="40" />
        </padding>
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" maxWidth="Infinity" minWidth="100" prefWidth="100">
            </ColumnConstraints>
            <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="200" prefWidth="200">
            </ColumnConstraints>
        </columnConstraints>



        <!-- Add chrome driver Label -->
        <Label text="Image path : " GridPane.columnIndex="0" GridPane.rowIndex="1">

            <font>
                <Font name="Arial" size="24" />
            </font>

        </Label>
        <!-- Add chrome driver Field -->
        <TextField fx:id="ImagePathField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="1" />





        <!-- Add handleURL Label -->
        <Label text="Handle URI : " GridPane.columnIndex="0" GridPane.rowIndex="2">

            <font>
                <Font name="Arial" size="24" />
            </font>


        </Label>
        <!-- Add handle url Field -->
        <TextField fx:id="handleUriField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="2" />






        <!-- Add insta post image number Label -->
        <Label text="Insta Post image number : " GridPane.columnIndex="0" GridPane.rowIndex="3">


            <font>
                <Font name="Arial" size="24" />
            </font>

        </Label>
        <!-- Add insta post image number Field -->
        <TextField fx:id="instaPostImageNumberField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="3" />




        <HBox GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.rowSpan="1" alignment="center" spacing="10">

            <Button fx:id="submitSettingButton" onAction="#handleSubmitSettingButtonAction" defaultButton="true" prefHeight="40" prefWidth="100" text="Submit setting" textAlignment="CENTER" textFill="WHITE">
                <GridPane.margin>
                    <Insets bottom="20" left="0" right="0" top="20" />
                </GridPane.margin>
                <font>
                    <Font size="24.0" />
                </font>
            </Button>

            <Button fx:id="deleteDBButton" onAction="#handleDeleteDBButtonAction" defaultButton="true" prefHeight="40" prefWidth="100" text="Delete DB" textAlignment="CENTER" textFill="WHITE">
                <GridPane.margin>
                    <Insets bottom="20" left="0" right="0" top="20" />
                </GridPane.margin>
                <font>
                    <Font size="24.0" />
                </font>
            </Button>

            <Button fx:id="backButton" onAction="#handleBackButtonAction" defaultButton="true" prefHeight="40" prefWidth="100" text="Back" textAlignment="CENTER" textFill="WHITE">
                <GridPane.margin>
                    <Insets bottom="20" left="0" right="0" top="20" />
                </GridPane.margin>
                <font>
                    <Font size="24.0" />
                </font>
            </Button>


        </HBox>


      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>


    </GridPane>




</StackPane>
